{
  "$schema": "https://smapi.io/schemas/content-patcher.json",

  "Changes": [
    /* pre-1.6 NPC stuff
    {
      "LogName": "NPC Manifestation",
      "Action": "EditData",
      "Target": "Data/NPCDispositions",
      "Entries": {
        "Curator": "adult/polite/outgoing/positive/male/not-datable/null/Town/null/Goldie/Custom_CuratorBedroom 6 7/Curator",
        "Goldie": "adult/polite/outgoing/positive/female/not-datable/null/Town/null/Curator/Custom_FishMuseum 15 45/Goldie"
      }
    },
    */
    {
      "LogName": "NPC Dispositions",
      "Action": "EditData",
      "Target": "Data/Characters",
      "Entries": {
        "Curator": {
          "DisplayName": "Curator",
          "Gender": "Male",
          "Age": "Adult",
          "Manner": "Polite",
          "SocialAnxiety": "Outgoing",
          "Optimism": "Positive",
          "CanBeRomanced": false,
          "CanSocialize": false,
          "ExcludeFromPerfectionScore": true,
          "SpawnIfMissing": true,
          "Home": [
            {
              "ID": "Default",
              "Location": "{{ModId}}_CuratorBedroom",
              "Tile": { "X": 6, "Y": 7 },
              "Direction": "Down"
            }
          ]
        },
        "Goldie": {
          "DisplayName": "Goldie",
          "Gender": "Female",
          "Age": "Adult",
          "Manner": "Polite",
          "SocialAnxiety": "Outgoing",
          "Optimism": "Positive",
          "CanBeRomanced": false,
          "CanSocialize": false,
          "ExcludeFromPerfectionScore": true,
          "SpawnIfMissing": true,
          "Home": [
            {
              "ID": "Default",
              "Location": "{{ModId}}_FishMuseum",
              "Tile": { "X": 15, "Y": 46 },
              "Direction": "Down"
            }
          ]
        }
      }
    },
    {
      "Action": "Load",
      "LogName": "NPC portraits & sprites",
      "Target": "Portraits/Curator, Characters/Curator, Portraits/Goldie, Characters/Goldie",
      "FromFile": "assets/{{target}}.png"
    },
    {
      "LogName": "NPCs AntiSocial Flag Curator & Goldie",
      "Action": "EditData",
      "Target": "Data/AntiSocialNPCs",
      "Entries": {
        "Curator": "true",
        "Goldie": "true"
      }
    },
    {
      "LogName": "NPC Exclusion Curator & Goldie",
      "Action": "EditData",
      "Target": "Data/CustomNPCExclusions",
      "Entries": {
        "Curator": "All",
        "Goldie": "All"
      }
    },
    {
      "LogName": "Load NPC Dialogue and Schedules",
      "Action": "Load",
      "Target": "Characters/Dialogue/Curator, Characters/schedules/Curator, Characters/Dialogue/Goldie, Characters/schedules/Goldie",
      "FromFile": "assets/{{Target}}.json"
    },
    /*
    //Schedules and dialogue for Aquarium School trip
    {
      "Action": "Include",
      "FromFile": "assets/Characters/schedules/test.json, assets/Characters/schedules/Eloise.json, assets/Characters/schedules/Penny.json, assets/Characters/schedules/Jas.json, assets/Characters/schedules/Vincent.json, assets/Characters/schedules/Leo.json",
      "When": {
        "HasFile:{{FromFile}}": true,
        "HasMod |contains=FlashShifter.StardewValleyExpandedCP": false
      },
      "Update": "OnLocationChange"
    },
    */
    {
      "Action": "Include",
      "FromFile": "patches/charactersGenderNeutral.json",
      "When": {
        "HasFile:{{FromFile}}": true,
        "HasMod": "Hana.GenderNeutralityMod"
      }
    },
    {
      "Action": "Include",
      "FromFile": "assets/Characters/Dialogue/Willy.json, assets/Characters/Dialogue/Sebastian.json, assets/Characters/Dialogue/Abigail.json, assets/Characters/Dialogue/Penny.json, assets/Characters/Dialogue/Wizard.json",
      "When": {
        "HasFile:{{FromFile}}": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "CharacterTranslations/{{Language}}.json",
      "When": {
        "HasFile:{{FromFile}}": true
      }
    },
    {
      "Action": "Include",
      "FromFile": "CharacterTranslations/GenderNeutral.{{Language}}.json",
      "When": {
        "HasFile:{{FromFile}}": true,
        "HasMod": "Hana.GenderNeutralityMod"
      }
    },
    {
      "LogName": "Animations",
      "Action": "EditData",
      "Target": "Data/animationDescriptions",
      "Entries": {
        "Curator_work": "24/25 25 25 26 26 26 27 27 27 24 24 24 24 24 24 24 24 24 24 24 24 24 24 24/24",
        "Curator_Sleep": "32/32/32"
      }
    },
    {
      "LogName": "Load Events",
      "Action": "Load",
      "Target": "Data/Events/{{ModId}}_FishMuseum, Data/Events/{{ModId}}_BigRoom, Data/Events/{{ModId}}_CuratorBedroom, Data/Events/{{ModId}}_ExteriorMuseum, Data/Events/{{ModId}}_AquariumBasement, Data/Events/{{ModId}}_KayaRoom, Data/Events/{{ModId}}_NotYouAgainRoom, Data/Events/{{ModId}}_RSVRoom, Data/Events/{{ModId}}_AquariumESRoom",
      "FromFile": "assets/Events/{{TargetWithoutPath}}.json",
      "When": {
        "HasFile:{{FromFile}}": true
      }
    },
    {
      "LogName": "Load MNF Events",
      "Action": "Load",
      "Target": "Data/Events/{{ModId}}_MNFIslandRoom, Data/Events/{{ModId}}_MNFKoiRoom, Data/Events/{{ModId}}_MNFKoiRoom, Data/Events/{{ModId}}_MNFRoom, Data/Events/{{ModId}}_SpiritOasis",
      "FromFile": "assets/Events/{{TargetWithoutPath}}.json",
      "When": {
        "HasFile:{{FromFile}}": true,
        "HasMod": "MoreFish"
      }
    },
    {
      "LogName": "Include Special Events",
      "Action": "Include",
      "FromFile": "assets/Events/SpecialEvents.json",
      "When": {
        "HasFile:{{FromFile}}": true
      }
    }
  ]
}
